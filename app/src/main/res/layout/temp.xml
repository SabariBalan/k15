<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/image1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="digital freeze"
        android:textColor="#000"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/textView4"
        android:background="#fff"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffd1d1d1"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/textView4"
        android:id="@+id/linearLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#ffffffff"
                    card_view:cardBackgroundColor="#ffffffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp"
                            android:gravity="center"
                            android:text="Mithrashree"
                            android:textColor="#c30b1f2b"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fz_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fab:fab_colorNormal="#ff795548"
                            fab:fab_colorPressed="#ff69473a"
                            fab:fab_icon="@drawable/call"
                            fab:fab_title="Subscribe to Facebook"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#ffffffff"
                    card_view:cardBackgroundColor="#ffffffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp"
                            android:gravity="center"
                            android:text="Architha"
                            android:textColor="#c30b1f2b"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fz_call1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            fab:fab_colorNormal="#673ab7"
                            fab:fab_colorPressed="#ff5d38ab"
                            fab:fab_icon="@drawable/call"
                            fab:fab_title="Subscribe to Facebook" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#ffffffff"
                    card_view:cardBackgroundColor="#ffffffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp"
                            android:gravity="center"
                            android:text="Mail your queries"
                            android:textColor="#c30b1f2b"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fz_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            fab:fab_colorNormal="#ff009688"
                            fab:fab_colorPressed="#ff008b7d"
                            fab:fab_icon="@drawable/gmail"
                            fab:fab_title="Subscribe to Facebook" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fz_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="#ffd60000"
        fab:fab_colorPressed="#ff69473a"
        fab:fab_icon="@drawable/webapp"
        fab:fab_title="Subscribe to Facebook"
        android:layout_above="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginBottom="39dp" />

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00113333"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/WorkAppTheme"
        app:theme="@style/ToolbarCustomIconColor"

        />

</RelativeLayout>
</ScrollView>