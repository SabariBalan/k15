<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_margin="5dp">



    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:scrollbarSize="0dp"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="'The first 90% of the code accounts for the first 90% of the development time. The remaining 10% of the code accounts for the other 90% of the development time. '"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Tom Cargill"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n\t\tWhen it comes to OPC, there aren't going to be any flowery introductions or explanations...\n\n\t\tA good code is expected to be both succinct and sufficient and this introduction will follow the same principle.\n\n\t\tYou are here to pit your mind against some of the best in India and maybe the world!\n\n\t\tGear up for the nervous tension of 'waiting'', the facepalm moments of CE, the challenges of TLE and of course, the elation of an AC.\n\n\t\tRemember that competing against the other participants is only half the challenge understanding and learning from the problems is a reward in itself!\n\n"

                    android:textSize="15dp"
                    android:textColor="#000"
                    />
            </LinearLayout>



    </ScrollView>

</LinearLayout>
