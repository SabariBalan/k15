<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <RelativeLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="#8f000000"
            android:orientation="vertical">


            <in.kurukshetra2015.org.app.KenBurnsView
                android:id="@+id/header_picture"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_margin="0dp"
                android:src="@drawable/image1"

                >


            </in.kurukshetra2015.org.app.KenBurnsView>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header_picture"
                android:background="#ffd9d9d9"

                android:orientation="vertical">


                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"

                    card_view:cardBackgroundColor="#212121"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="0dp">

                    <TextView
                        android:id="@+id/jsontext"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"

                        android:layout_margin="2dp"
                        android:background="#00ffffff"
                        android:gravity="center_vertical"
                        android:padding="5dp"


                        android:text="Check this space for updates"

                        android:textColor="#fff"
                        android:textSize="17dp"
                        android:textStyle="italic" />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/map_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#ffffffff"

                    card_view:cardBackgroundColor="#ffffffff"
                    card_view:cardCornerRadius="0dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f41b1b1b"
                        android:scrollbarSize="0dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:onClick="openthelayout"
                                    android:padding="2dp"
                                    android:src="@drawable/robowars"
                                    android:id="@+id/robo_s"/>

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Robowars"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:padding="2dp"
                                    android:onClick="openthelayout"
                                    android:src="@drawable/riddle"
                                    android:id="@+id/ros_s"/>

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="ROS"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:padding="2dp"
                                    android:id="@+id/alcatraz_s"
                                    android:onClick="openthelayout"
                                    android:src="@drawable/alcatraz_front" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Alcatraz"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:padding="2dp"
                                    android:id="@+id/god_s"
                                    android:onClick="openthelayout"
                                    android:src="@drawable/godspeed" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Godspeed"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:padding="2dp"
                                    android:id="@+id/open_s"
                                    android:onClick="openthelayout"
                                    android:src="@drawable/alcatraz" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="K! Open Quiz"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:onClick="openthelayout"
                                    android:padding="2dp"
                                    android:id="@+id/onsite_s"
                                    android:src="@drawable/onsite" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="OSPC"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:padding="2dp"
                                    android:id="@+id/cha_s"
                                    android:onClick="openthelayout"
                                    android:src="@drawable/kaios" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Chaos Theory"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>


                        </LinearLayout>

                    </HorizontalScrollView>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#ffffffff"

                    card_view:cardBackgroundColor="#ffffffff"
                    card_view:cardCornerRadius="0dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f41b1b1b"
                        android:scrollbarSize="0dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:padding="2dp"
                                    android:onClick="openthelayout"
                                    android:id="@+id/kiran_s"
                                    android:src="@drawable/kb_1" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Kiran Bedi Lecture"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:onClick="openthelayout"
                                    android:padding="2dp"
                                    android:id="@+id/bio_s"
                                    android:src="@drawable/biomimicry_front" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Biomimicry"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:padding="2dp"
                                    android:onClick="openthelayout"
                                    android:id="@+id/digital_s"
                                    android:src="@drawable/digital_freeze_f" />
                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Digital Freeze"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:onClick="openthelayout"
                                    android:padding="2dp"
                                    android:id="@+id/ez_s"
                                    android:src="@drawable/ez_front" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="eZsystems"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:padding="2dp"
                                    android:onClick="openthelayout"
                                    android:id="@+id/robos_s"
                                    android:src="@drawable/ros_turtle" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Robot OS"
                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:onClick="openthelayout"
                                    android:padding="2dp"
                                    android:id="@+id/laser_s"
                                    android:src="@drawable/las_s" />

                                <TextView
                                    android:layout_width="125dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Laser Tag"

                                    android:textColor="#fff5f5f5" />
                            </LinearLayout>


                        </LinearLayout>

                    </HorizontalScrollView>

                </android.support.v7.widget.CardView>


            </LinearLayout>


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#62000000" />


            <ImageView
                android:id="@+id/krkmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/header_picture"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:scaleType="fitCenter"
                android:src="@drawable/klogo" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="4.0">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/c2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    card_view:cardBackgroundColor="#22000000"


                    >

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text="30+"
                        android:textColor="#FFF"
                        android:textSize="25sp"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/c1"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="3.0"
                    card_view:cardBackgroundColor="#22000000"


                    >

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Events"
                        android:textColor="#FFF"
                        android:textSize="25sp"

                        />

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        fab:fab_addButtonColorNormal="#efffffff"
        fab:fab_addButtonColorPressed="#edf6f6f6"
        fab:fab_addButtonPlusIconColor="#f50c0c0c"
        fab:fab_expandDirection="up"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/instagram_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#ff5d4037"
            fab:fab_colorPressed="#ff74661e"
            fab:fab_icon="@drawable/instagram_fb"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/facebook_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#ff354693"
            fab:fab_colorPressed="#ff345b9f"
            fab:fab_icon="@drawable/fb"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/twitter_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/twit"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/whatsapp_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openthelayout"
            fab:fab_colorNormal="#ff229f05"
            fab:fab_colorPressed="#ff229305"
            fab:fab_icon="@drawable/whatsapp"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/gmail_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#ffca1c00"
            android:onClick="openthelayout"
            fab:fab_colorPressed="#ffb11c00"
            fab:fab_icon="@drawable/gmail"
            />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>