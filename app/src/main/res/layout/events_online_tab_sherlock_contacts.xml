<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="#ffd1d1d1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:scrollbarSize="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffffff"
                card_view:cardBackgroundColor="#ffffffff"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp"
                            android:gravity="center"
                            android:text="M Karthikeyan"
                            android:textColor="#c30b1f2b"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_online_tab_sherlock_contacts_karthikeyan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            fab:fab_colorNormal="#ff009688"
                            fab:fab_colorPressed="#ff008b7d"
                            fab:fab_icon="@drawable/call"
                            fab:fab_title="Subscribe to Facebook"
                            android:onClick="Callthenumber"
                            />

                    </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffffff"
                card_view:cardBackgroundColor="#ffffffff"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp"
                            android:gravity="center"
                            android:text="M Arun Kumar"
                            android:textColor="#c30b1f2b"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_online_tab_sherlock_contacts_arun_kumar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            fab:fab_colorNormal="#ff009688"
                            fab:fab_colorPressed="#ff008b7d"
                            android:onClick="Callthenumber"
                            fab:fab_icon="@drawable/call"
                            fab:fab_title="Subscribe to Facebook" />

                    </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffffff"
                card_view:cardBackgroundColor="#ffffffff"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp"
                            android:gravity="center"
                            android:text="Vasantha Kumar M U"
                            android:textColor="#c30b1f2b"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_online_tab_sherlock_contacts_vasantha_kumar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            fab:fab_colorNormal="#ff009688"
                            fab:fab_colorPressed="#ff008b7d"
                            fab:fab_icon="@drawable/call"
                            android:onClick="Callthenumber"
                            fab:fab_title="Subscribe to Facebook" />

                    </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffffffff"
                card_view:cardBackgroundColor="#ffffffff"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:layout_marginStart="28dp"
                            android:gravity="center"
                            android:text="Mail your queries"
                            android:textColor="#c30b1f2b"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_online_tab_sherlock_contacts_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            fab:fab_colorNormal="#ff009688"
                            android:onClick="Callthenumber"
                            fab:fab_colorPressed="#ff008b7d"
                            fab:fab_icon="@drawable/gmail"
                            fab:fab_title="Subscribe to Facebook" />

                    </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>