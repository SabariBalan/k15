<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fff7f7f7"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"

        android:background="@drawable/unesco_image"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17dp"

        android:textColor="#000"
        android:text="\n\t\tThe UNESCO patronage is the highest form of its support for any commendable activity and the fact that Kurukshetra is the first student organized fest to be honoured with this prestigious patronage stands as a testimony for the unparalleled standards of Kurukshetra.\n"

        />

        </LinearLayout>
    </ScrollView>

</LinearLayout>