<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_margin="5dp">



    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:scrollbarSize="0dp"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\t\tBuild two manually controlled wired or wireless bots capable of doing the following activities."

                    android:textSize="15dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nBOT 1"
                    android:textStyle="bold"
               android:textSize="15dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n\t\tTrek in land
\n\n\t\tPick and place ferromagnetic objects"

                    android:textSize="15dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nBOT 2"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n\t\tDrift in water
\n\n\t\tPick and place ferromagnetic objects, submerged/floating in water.
\n\n\t\tTeam Description Paper (TDP) is required for preliminary assessment.Click here to download the format of TDP. The last date for TDP submission is 1st January 2015 11:59 PM."
                    android:textSize="15dp"
                    android:textColor="#000"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:id="@+id/ttark_ps_tdp"
                    android:onClick="openpage"
                    android:textColor="#ff7a7fff"
                    android:text="Click Here"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="to download the format of TDP.\n"

                    android:textSize="15dp"
                    android:textColor="#000"
                    />





            </LinearLayout>


    </ScrollView>

</LinearLayout>
