                    android:textSize="15dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nVenue\t\t\t:  IIM Kozhikode
\n\nDate\t\t\t\t:  January 9, 2015
\n\nTimings\t\t:  Starts by 1:30pm\n"
